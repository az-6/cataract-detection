<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
            android:startColor="@color/md_theme_dark_errorContainer"
            android:endColor="@color/md_theme_onPrimaryContainer"
            android:angle="315"/>
        </shape>
    </item>
    <item android:bottom="3dp" android:top="3dp"
        android:right="3dp"
        android:left="3dp">
        <shape android:shape="oval">
            <solid android:color="#faf8ff"/>
        </shape>
    </item>
    <item
        android:drawable="@drawable/ic_camera"
        android:top="15dp"
        android:bottom="15dp"
        android:right="15dp"
        android:left="15dp"/>

</layer-list>